{
  "$id": "https://schema.legytma.com.br/3.0.0/schema/double.schema.json",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$comment": "Used to identify parser. Every parser can permit only one type",
  "title": "Double",
  "description": "Define the representation of double acceptable.",
  "definitions": {
    "doubleNumber": {
      "type": "number",
      "examples": [12.3, -1.2, 0.1]
    },
    "doubleString": {
      "type": "string",
      "pattern": "^-?\\d+(\\.\\d+)?$",
      "examples": ["12.3", "-1.2", "0.1"]
    },
    "doubleEnum": {
      "type": "string",
      "enum": ["nan", "hybrid", "normal", "satellite", "terrain"],
      "examples": ["normal", "nan"]
    }
  },
  "oneOf": [
    {"$ref": "#/definitions/doubleNumber"},
    {"$ref": "#/definitions/doubleString"},
    {"$ref": "#/definitions/doubleEnum"}
  ]
}
