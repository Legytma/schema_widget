{
  "$id": "https://legytma.com.br/schema/widget/material_app.schema.json",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Material App",
  "description": "",
  "$comment": "Created by Windol <windol@legytma.com.br> at 12/05/2020.\nCopyright (c) 2020 Legytma Soluções Inteligentes (https://legytma.com.br). All rights reserved.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://legytma.com.br/schema/widget.schema.json"
    }
  ],
  "properties": {
    "type": {
      "$ref": "https://legytma.com.br/schema/widget.schema.json#properties/type",
      "const": "MaterialApp"
    },
    "locale": {"$ref": "https://legytma.com.br/schema/locale.schema.json"},
    "title": {
      "title": "Title",
      "description": "",
      "$comment": "",
      "type": "string",
      "default": ""
    },
    "home": {"$ref": "https://legytma.com.br/schema/widget.schema.json"},
    "theme": {"$ref": "https://legytma.com.br/schema/theme_data.schema.json"},
    "color": {"$ref": "https://legytma.com.br/schema/color.schema.json"},
    "routes": {
      "title": "Routes",
      "description": "",
      "$comment": "",
      "type": "object",
      "default": {}
    },
    "onUnknownRoute": {"$ref": "https://legytma.com.br/schema/route_factory.schema.json"},
    "onGenerateTitle": {"$ref": "https://legytma.com.br/schema/generate_app_title.schema.json"},
    "onGenerateRoute": {"$ref": "https://legytma.com.br/schema/route_factory.schema.json"},
    "initialRoute": {
      "title": "Initial Route",
      "description": "",
      "$comment": "",
      "type": "string"
    },
    "navigatorObservers": {
      "$ref": "https://legytma.com.br/schema/list_navigator_observer.schema.json",
      "default": []
    },
    "navigatorKey": {"$ref": "https://legytma.com.br/schema/global_key_navigator_state.schema.json"},
    "builder": {"$ref": "https://legytma.com.br/schema/transition_builder.schema.json"},
    "checkerboardOffscreenLayers": {
      "$ref": "https://legytma.com.br/schema/bool.schema.json",
      "default": false
    },
    "checkerboardRasterCacheImages": {
      "$ref": "https://legytma.com.br/schema/bool.schema.json",
      "default": false
    },
    "darkTheme": {"$ref": "https://legytma.com.br/schema/theme_data.schema.json"},
    "debugShowCheckedModeBanner": {
      "$ref": "https://legytma.com.br/schema/bool.schema.json",
      "default": true
    },
    "debugShowMaterialGrid": {
      "$ref": "https://legytma.com.br/schema/bool.schema.json",
      "default": false
    },
    "localeListResolutionCallback": {"$ref": "https://legytma.com.br/schema/locale_list_resolution_callback.schema.json"},
    "localeResolutionCallback": {"$ref": "https://legytma.com.br/schema/locale_resolution_callback.schema.json"},
    "localizationsDelegates": {"$ref": "https://legytma.com.br/schema/iterable_localizations_delegate_dynamic.schema.json"},
    "showPerformanceOverlay": {
      "$ref": "https://legytma.com.br/schema/bool.schema.json",
      "default": false
    },
    "showSemanticsDebugger": {
      "$ref": "https://legytma.com.br/schema/bool.schema.json",
      "default": false
    },
    "supportedLocales": {
      "$ref": "https://legytma.com.br/schema/iterable_locale.schema.json",
      "default": {
        "languageCode": "en",
        "countryCode": "US"
      }
    },
    "themeMode": {
      "$ref": "https://legytma.com.br/schema/double.schema.json",
      "default": "system"
    }
  },
  "required": ["type", "title"]
}

